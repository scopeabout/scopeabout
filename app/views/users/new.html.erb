<h1>Sign Up</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label(:user, :email) %>
    <%= text_field(:user, :email, class:'form-control', type: 'email') %>
  </div>

  <div class="form-group">
    <%= label(:user, :name) %>
    <%= text_field(:user, :name, class:'form-control', placeholder: 'For public') %>
  </div>

  <div class="form-group">
    <%= label(:user, :password) %>
    <%= password_field 'user', 'password', class:'form-control' %>
  </div>

  <div class="form-group">
    <%= label(:user, :password_confirm) %>
    <%= password_field 'user', 'password_confirmation', class:'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Sign Up', class: 'btn btn-default' %>
  </div>
<% end %>
