<%= form_for @session_feed, url: {action: 'create'} do |form| %>
  <div class="form-group">
    <label for="body-textarea"><%= t 'activerecord.attributes.session_feed.body' %></label>
    <%= form.text_area :body, id: 'body-textarea', class: 'form-control', rows: '3', placeholder: 'type your message...'%>
  </div>

  <div class="form-group">
    <%= form.file_field :attachment %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>