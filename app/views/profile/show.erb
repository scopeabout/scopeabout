<div class="profile-show">
  <h1><%= @user.name %></h1>
  <hr/>

  <div class="row">
    <div class="col-lg-12">
      <%= image_tag @user.avatar.url(:square), class: 'rounded avatar-img' %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <h4>Interests</h4>
      <% @user.interest_list.each do |item| %>
        <span class="item">#<%= item %> </span>
      <% end %>
    </div>
  </div>


  <div class="row">
    <div class="col-lg-12">
      <h4>Description</h4>
      <%= @user.description %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <br>
      <%= link_to 'Edit Profile', profile_edit_basic_path, class: 'btn btn-outline-primary' %>
    </div>
  </div>
</div>



